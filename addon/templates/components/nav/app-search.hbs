{{#fancy-search
  resizeToContent=true
  dark=true
  searchInputText=appSearch.formattedSearch
  placeHolderText=searchPlaceholderText
  toggleSearchIcon=true as |fancySearch|}}

  {{#qpid-autocomplete
    debounceTime=750
    inputClass="search-input"
    itemSelected=(action attrs.onItemSelected)
    onCancel=(action 'cancelSearch' target=fancySearch)
    searchQueryAction=(action attrs.query)
    loadMore=(action loadMore)
    selectedValue=appSearch.currentSearch
    selectedLabelFormatter=appSearch.formatter
    showHeaderInResults=true
    isNoteViewer=isNoteViewer
    placeHolderText=searchPlaceholderText as |result userInput|}}

    {{component searchResultsComponent result=result userInput=userInput showSite=showSite}}
  {{else}}
    {{noSearchResultsText}}
  {{/qpid-autocomplete}}

{{/fancy-search}}
